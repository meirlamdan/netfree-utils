{
  "manifest_version": 3,
  "name": "NetFree-Utils",
  "version": "0.0.1",
  "description": "Chrome extension for NetFree users.",
  "permissions": [
    "scripting",
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/utils.js",
        "src/iframe-youtube.js",
        "src/check-link.js"
      ],
      "css": [
        "index.css"
      ],
      "run_at": "document_idle"
    }
  ]
}